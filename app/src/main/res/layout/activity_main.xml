<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <CheckBox
        android:id="@+id/cb1"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_above="@id/cb2" />

    <CheckBox
        android:id="@+id/cb2"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_above="@id/cb3" />

    <CheckBox
        android:id="@+id/cb3"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true" />

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/sb3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/cb3"
        android:paddingStart="30dp"
        android:paddingVertical="4dp"
        android:thumb="@drawable/thumb1" />

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/sb2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/sb3"
        android:layout_toRightOf="@id/cb2"
        android:paddingStart="30dp"
        android:paddingVertical="4dp"
        android:thumb="@drawable/thumb2" />

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/sb1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/sb2"
        android:layout_toRightOf="@id/cb1"
        android:paddingStart="30dp"
        android:paddingVertical="4dp"
        android:thumb="@drawable/thumb3" />

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:src="@drawable/title" />
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="100"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#ff00"/>

    <ImageButton
        android:id="@+id/btn"
        android:layout_centerInParent="true"
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/play" />
</RelativeLayout>